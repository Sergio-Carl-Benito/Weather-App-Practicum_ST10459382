<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    android:backgroundTint="#FFEB3B"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="The Average Temperature for the week is:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/averageTemp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        app:srcCompat="@drawable/snowflake"
        tools:srcCompat="@drawable/snowflake" />

    <Button
        android:id="@+id/navigate_DailyTemperatures"
        android:layout_width="236dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:backgroundTint="#FF0000"
        android:text="Daily Temperatures"
        android:textSize="24sp" />

    <Button
        android:id="@+id/navigate_Exit_App"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:backgroundTint="#03A9F4"
        android:text="Exit App"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="51dp" />

</LinearLayout>